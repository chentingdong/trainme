model Schedule {
  activityUuid  String?   @db.Uuid @map("activity_uuid")
  activity      Activity? @relation(fields: [activityUuid], references: [uuid])
  date          DateTime  @map("date") @default(now())
  feeling       Int?      @map("feeling")
  id            String    @id @db.Uuid @map("id")
  notes         String?   @db.VarChar(255) @map("notes")
  rpe           Int?      @map("rpe")
  workoutId     String    @db.Uuid @map("workout_id")

  @@map("schedule")
  @@index([activityUuid])
  @@index([workoutId])
}